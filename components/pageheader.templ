package components

import "strings"

templ PageHeader(plainText, gradientText string) {
  <h1 class="flex items-center justify-center leading-snug text-6xl font-extrabold text-gray-900 dark:text-white p-6">{strings.ToUpper(plainText)}&nbsp;<span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">{strings.ToUpper(gradientText)}</span></h1>
}
